<ResultScreen>:
    MDScrollView:
        do_scroll_x:False
        do_scroll_y:True
        MDBoxLayout:
            id:mybox
            orientation: 'vertical'
            pos_hint:{"center_y":0.8}
            padding:10
            spacing:10
            GridLayout:
                cols:2
                Image:
                    id:image0
                    size: cm(5), cm(4)
                    pos_hint: {"x":0.1, "y":0.1}
                Button:
                    id:backB
                    text:"Seleccionar"
                    size: cm(5), cm(0.5)
                    on_release:root.selected(0)
                Image:
                    id:image1
                    size: cm(6), cm(3)
                    pos_hint: {"x":0.1, "y":0.1}
                Button:
                    id:backB
                    text:"Seleccionar"
                    on_release:root.selected(1)
                Image:
                    id:image2
                    size: cm(4), cm(2)
                    pos_hint: {"x":0.1, "y":0.1}
                Button:
                    id:backB
                    text:"Seleccionar"
                    on_release:root.selected(2)
                Image:
                    id:image3
                    size: cm(4), cm(2)
                    pos_hint: {"x":0.1, "y":0.1}
                Button:
                    id:backB
                    text:"Seleccionar"
                    on_release:root.selected(3)
            MDRaisedButton:
                id:backB
                text:"Volver"
                on_release:root.callback()