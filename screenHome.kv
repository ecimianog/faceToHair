<Homescreen>:
    MDScrollView:
        do_scroll_x:False
        do_scroll_y:True
        MDBoxLayout:
            id:mybox
            orientation: 'vertical'
            size_hint_y: 0.9
            pos_hint:{"center_y":0.8}
            padding:10
            spacing:10
            MDLabel:
                id:info
                text:"Captura"
                size_hint_y: 0.1
            MDBoxLayout:
                id:cameraBox
                orientation: 'vertical'
                size_hint_y: 0.9
                pos_hint:{"center_y":0.8}
                padding:10
                spacing:10
            MDRaisedButton:
                id: capture
                disabled: 'True'
                text:"Captura"
                on_release:root.captureyouface()
            MDRaisedButton:
                id: HSLib
                text:"Hide Lib"
                on_release:root.hidelib()
            MDRaisedButton:
                id: HSMd
                text:"Hide MD"
                on_release:root.hidemd()
            MDRaisedButton:
                id: btnExit
                text: "Exit"
                on_press: app.stop() 
           



