<Homescreen>:
    MDScrollView:
        do_scroll_x:False
        do_scroll_y:True
        MDBoxLayout:
            id:mybox
            orientation: 'vertical'
            size_hint_y: 0.9
            pos_hint:{"center_y":0.8}
            padding:10
            spacing:10
            Image:
                id:image
                source: 'images/n.png'
            MDTextField:
                id:name
                hint_text:"Nombre"
                font_size: 30
            MDRaisedButton:
                text:"Captura"
                on_release:root.captureyouface()
            MDRaisedButton:
                id: HSLib
                text:"Hide Lib"
                on_release:root.hidelib()
            MDRaisedButton:
                id: HSMd
                text:"Hide MD"
                on_release:root.hidemd()
            MDList:
                id:resultbox
            MDRaisedButton:
                id: btnExit
                text: "Exit"
                on_press: app.stop() 
           



